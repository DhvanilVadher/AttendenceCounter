<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient
                    android:endColor="#fd575a"
                    android:centerColor="#ff0000"
                    android:startColor="#ff0109"
                    android:angle="270" />
                <corners
                    android:radius="20dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient
                    android:endColor="#74ff49"
                    android:centerColor="#a1ffa0"
                    android:startColor="#bfff00"
                    android:angle="270" />
                <corners
                    android:radius="20dp" />
                <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
            </shape>

        </item>
    </selector>